<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:padding="8dp">

        <ImageView
            android:id="@+id/store_detail_theme_image"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:scaleType="fitXY"
            android:src="@drawable/cafe1" />

        <TextView
            android:id="@+id/text1"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_theme_image"
            android:text="★ "
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/store_detail_theme_point"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_theme_image"
            android:layout_alignRight="@id/text1"

            android:text=" 4.8"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_theme_image"
            android:layout_alignRight="@id/store_detail_theme_point"
            android:text="난이도"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/store_detail_theme_level"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_theme_image"
            android:layout_alignRight="@id/text2"
            android:text="5"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/store_detail_theme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/store_detail_theme_point"
            android:textStyle="bold"
            android:text="비밀의 화원" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>